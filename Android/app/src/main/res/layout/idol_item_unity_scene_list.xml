<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/scene_img"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_margin="15dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageRoundStyle" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/checked_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/item_checked_icon"
        app:layout_constraintBottom_toBottomOf="@id/scene_img"
        app:layout_constraintEnd_toEndOf="@id/scene_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
